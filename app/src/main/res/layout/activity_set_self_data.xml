<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".register.SetSelfDataActivity">

    <TextView
        android:id="@+id/hey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/set_self_data_hey"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setSelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hey"
        android:layout_alignStart="@+id/hey"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:text="@string/set_self_data_message"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/data_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setSelf"
        android:layout_alignStart="@+id/setSelf"
        android:layout_alignEnd="@+id/setSelf"
        android:layout_marginTop="20dp"
        android:text="@string/set_self_data_name"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/set_self_data_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_name"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/data_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_self_data_name"
        android:layout_marginTop="15dp"
        android:text="@string/set_self_data_age"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/set_self_data_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_age"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/sex_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_self_data_age"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:text="@string/set_self_data_sex"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/set_self_data_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sex_data"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/location_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_self_data_sex"
        android:layout_marginTop="15dp"
        android:text="@string/set_self_data_location"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/set_self_data_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_data"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/set_self_data_next_button"
        style="?android:textAppearanceSmall"
        android:layout_width="136dp"
        android:layout_height="45dp"
        android:layout_below="@+id/set_self_data_location"
        android:layout_alignStart="@+id/set_self_data_location"
        android:layout_alignEnd="@+id/set_self_data_location"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/shape"
        android:text="@string/set_self_data_next_button"
        android:textStyle="bold" />

</RelativeLayout>



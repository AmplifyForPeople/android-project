<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_framesLayouts"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_establishment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/darkGrey"
                android:contentDescription="@string/image_desc"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/name_establishment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:text="@string/name_establishment"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/info_establishment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textSize="12sp"
                android:text="@string/info_establishment"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>